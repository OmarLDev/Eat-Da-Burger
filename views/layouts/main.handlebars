	<script>
	$(function() {
		$(".devour").on("click", function(event) {
			var id = $(this).data("id");
			
			var isDevoured = {
				devoured : true
			};

			$.ajax("/api/burger/" + id, {
				type: "PUT", 
				data: isDevoured
			}).then(
				function() {
					location.reload();
			});
		});

		$(".create-form").on("submit", function(event){
			var newBurger = {
				name: $("#newBurger").val().trim(),
				devoured: false
			};
			$.ajax("/api/burgers",{
				type: "POST",
				data: newBurger
			}).then(
				function(){
					console.log("New Burger Added");
					location.reload();
				}
			);
		});
	});
	</script>
</html>
